#!/bin/bash

INVENTORY="ansible_hosts"
PLAYBOOK="run-one-role.yml"
#PLAYBOOK="iiab-stages.yml"
CWD=`pwd`
if [ $# -eq 2 ]; then
   export ANSIBLE_LOG_PATH="$2"
else
   export ANSIBLE_LOG_PATH="$CWD/video-debug.log"
fi

if [ ! -f $PLAYBOOK ]; then
    echo "Exiting: IIAB Playbook not found."
    echo "Please run this in /opt/video/iiab (top level of the git repo)."
    exit 1
fi

if [[ $# -eq 0 ]] ; then
    echo " usage: ./runrole <name of role>"
    echo " Can only take a single value."
    exit 0
fi

ansible-playbook -i $INVENTORY $PLAYBOOK --connection=local -e "role_to_run=$1"
